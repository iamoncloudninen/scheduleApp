<%= render "shared/header" %>
<div>
  <ul>
    <li><%= link_to "←一覧に戻る", :users %></li>
  </ul>
</div>
<h2><%= @user.title %></h2>
<%= link_to "編集", :edit_user%>

<table>
  <tr>
    <th>開始日</th>
    <td><%= @user.startDate.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @user.endDate.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= allDayMethod(@user.allDay) %></td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @user.scheduleMemo %></td>
  </tr>
</table>


